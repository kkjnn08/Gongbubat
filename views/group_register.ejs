<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>그룹 생성</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <style>
      body {
        display: flex;
        min-height: 120vh;
      }
      main {
        width: 1130px;
        justify-content: center;
      }
      #form {
        margin-left: 30%;
      }

      #header {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-left: 9%;
      }

      #footer {
        margin-right: 5%;
      }

      #border {
        padding: 30px;
      }

      #button,
      #category {
        margin-top: 50px;
      }

      #filename {
        margin-top: 10px;
      }

      #preview {
        width: 485px;
      }
    </style>
  </head>
  <body>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>

    <div class="container">
      <%- include('nav.html') %>
      <main>
        <div class="py-5 text-center" id="header">
          <img
            class="d-block mx-auto mb-4"
            src="/docs/5.2/assets/brand/bootstrap-logo.svg"
            alt=""
            width="72"
            height="57"
          />
        </div>

        <div class="row g-5" id="form">
          <div class="col-md-7 col-lg-8 border rounded" id="border">
            <form
              class="needs-validation"
              method="post"
              action="/group/<%=params%>/register"
              enctype="multipart/form-data"
            >
              <div class="row g-3">
                <div class="col-12">
                  <label for="Name" class="form-label">이름</label>
                  <input
                    type="text"
                    class="form-control"
                    id="Name"
                    placeholder="이름"
                    name="Name"
                    required
                  />
                  <div class="invalid-feedback">Valid name is required.</div>
                </div>

                <div class="col-12" style="margin-top: 25px">
                  <h6>지역</h6>
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="local"
                  >
                    <option name="서울">서울</option>
                    <option name="경기">경기</option>
                    <option name="인천">인천</option>
                    <option name="강원">강원</option>
                    <option name="충청">충청</option>
                    <option name="전라">전라</option>
                    <option name="경상">경상</option>
                    <option name="부산">부산</option>
                  </select>
                </div>

                <div class="col-12">
                  <label for="Notice" class="form-label">자기 소개</label>
                  <div class="input-group has-validation">
                    <textarea
                      class="form-control"
                      id="floatingTextarea2"
                      style="height: 100px"
                      name="introduce"
                    ></textarea>
                    <div class="invalid-feedback">
                      Your username is required.
                    </div>
                  </div>
                </div>

                <div class="col-12">
                  <span>모임에 바라는 점 </span>
                  <textarea
                    class="form-control"
                    id="floatingTextarea2"
                    style="height: 100px; margin-top: 15px"
                    name="Hope"
                  ></textarea>
                  <div class="invalid-feedback">
                    Please enter a valid email address for shipping updates.
                  </div>
                </div>

                <div class="col-12">
                  <label for="Img" class="form-label">사진</label>
                  <input
                    type="file"
                    class="form-control"
                    id="Img"
                    placeholder="사진"
                    accept="image/*"
                    name="Img"
                  />
                  <img id="preview" />
                </div>

                <script>
                  $("#Img").change((e) => {
                    console.log(e);
                    $("#filename").text(e.target.files[0].name);

                    var file = event.target.files[0];

                    var reader = new FileReader();
                    reader.onload = function (e) {
                      $("#preview").attr("src", e.target.result);
                    };

                    reader.readAsDataURL(file);
                  });
                </script>

                <div class="d-grid gap-2" id="button">
                  <button class="btn btn-primary" type="submit">버튼</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </main>
    </div>

    <script
      src="/docs/5.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>

    <script src="form-validation.js"></script>
  </body>
</html>
