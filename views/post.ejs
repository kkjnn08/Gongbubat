  <body>
    <%- include('nav.html') %>
    
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <center>
      <div id="container" style="width: 1130px;">
        <h2 class="ml-2 my-3 text-center">게시판</h2>
        <a id="createBtn" class="btn btn-danger delete" href="/write">글쓰기</a>
      </div>
    </center>

    </div>
    <!-- 검색바 -->
    <div id="searchDiv">
      <form id="searchForm"  class="input-group mb-3">
        <select class="form-select" style="width: 120px; display: inline-block">
          <option value="1">글내용</option>
          <option value="2">작성자</option>
          <option value="3">작성일</option>
        </select>
      <input type="text" class="form-control" style="display: inline-block; width: 81%;">
      <button class="btn btn-primary" type="submit">버튼</button>
      </form>
    </div>

    <!-- 게시글 -->
    <div class="container" style="width: 1130px;">
      <ul class="list-group">
        <% for(let i = 0; i < posts.length; i++){ %>
        <li class="list-group-item">
          글 번호 : <%= posts[i]._id %>
          <div style="float: right;">날짜 : <%= posts[i].createdate %></div>
          <p></p>
          <form id="editContents" action="/edit?_method=PUT" method="POST" style="display: none;">
            <textarea name="id" type="text" style="display: none;"><%= posts[i]._id %></textarea>
            <textarea name="writer" style="display: none;"><%= posts[i].writer %></textarea>
            <textarea name="editContent" class="form-control" style="resize: vertical;"><%= posts[i].content %></textarea>
            <button id="updateBtn" type="submit" class="btn btn-primary" style="width: 80px;">수정</button>
          </form>
          <h4 id="postContent"><%= posts[i].writer %> : <%= posts[i].content %></h4>
          <div id="postOption" style="float: right; margin-top: -50px;">
            <button class="btn btn-danger delete" data-id="<%= posts[i]._id %>" style="float: right;">삭제</button>
            <button id="editBtn" class="btn btn-danger" style="float: right; margin-right: 3px;">수정</button>
          </div>
          <p></p>
          <hr id="line" class="my-1" style="width: 100%">
          <!-- 댓글 작성 -->
          <div class="formbody">
            <form action="/addComment" method="POST">
              <input name="writer" type="hidden" value="글쓴이">
              <input name="post_id" type="hidden" value="<%= posts[i]._id %>">
              <input name="comment" class="form-control" aria-placeholder="글 내용" style="width: 88%; float: left;" />
              <button type="submit" class="btn btn-primary" style="float: right; background-color: #4AB186; border-color:#4AB186;">댓글 등록</button>
            </form>
          </div>
          <p></p>

          <!-- 댓글 표기 -->
          <div>
            <% for(let j = 0; j < comments.length; j++){ %>
              <% if(comments[j].post_id == posts[i]._id){ %>
                <div style="margin: 1px; border: 1px;">
                  <svg xmlns="http://www.w3.org/2000/svg" style="margin-left:10px; margin-right:10px; float:left; transform: rotate( 180deg );" width="16" height="16" fill="currentColor" class="bi bi-arrow-90deg-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M1.146 4.854a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H12.5A2.5 2.5 0 0 1 15 6.5v8a.5.5 0 0 1-1 0v-8A1.5 1.5 0 0 0 12.5 5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4z"/>
                  </svg>
                  <%= comments[j].writer %> : <%= comments[j].content %>
                  <div style="float: right;">
                    날짜 : <%= comments[j].createdate %>
                    <button class="btn btn-danger deleteComment" data-id="<%= comments[j]._id %>">삭제</button>
                  </div>
                </div>
                <p></p>
              <% } %>
            <% } %>
            </li>
            <p></p>
            <% } %>
          </div>
        <br/>
      </ul>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    
